<%= form_tag("/cards", method: "post") do %>
  <%= label_tag(:title, "title") %>
  <%= text_field_tag(:title) %>
  <%= label_tag(:description, "description") %>
  <%= text_field_tag(:description) %>
  <%= label_tag(:people_needed, "people_needed") %>
  <%= text_field_tag(:people_needed) %>
  <%= label_tag(:category_id, "category_id") %>
  <%= select_tag(:category_id,options_for_select(Category.all.map {|category| [category.name, category.id]})) %>
  <%= label_tag(:location, "location") %>
  <%= text_field_tag(:location) %>
  <%= label_tag(:time, "time") %>
  <%= date_field_tag(:time) %>
  <%= label_tag(:material_name, "material_name") %>
  <%= text_field_tag(:material_name) %>
  <%= label_tag(:material_quantity, "material_quantity") %>
  <%= text_field_tag(:material_quantity) %>
  <br>
  <%= submit_tag("create") %>
<% end %>
